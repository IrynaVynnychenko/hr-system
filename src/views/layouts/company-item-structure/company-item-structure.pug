section.company-header
    .container
        .row
            .col-xl-5.col-lg-4
                h2.company-header__name Рога и копыта
            .col-xl-7.col-lg-8
                include ../company-btns/company-btns.pug

section.company-amount
    .container
        .row
            .col-xl-5.col-lg-4
                .company-amount__title Всего: 
                    span 7 
                    | сотрудников
            .col-xl-7.col-lg-8
                .company-amount__block
                    button.btn-yellow.btn-company(data-toggle="modal" data-target="#exampleModal" type="button")
                        span
                            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <ellipse cx="6.95674" cy="7" rx="6.95674" ry="7" fill="black"/>
                            <path d="M6.95639 5V9M8.94403 7L4.96875 7" stroke="#FEDC2D" stroke-width="1.5" stroke-linecap="round"/>
                            </svg>
                        | Добавить сотрудника
                    .search-block
                        input#search-input.search-input(type="text" placeholder="Имя сотрудника")
                        label.label-search(for="search-input")
                            img(src="./image/loop.svg" alt="#")
include ../company-table/company-table.pug            

section.company-bottom
    .container
        .row
            .col-lg-12
                include ../pagination/pagination.pug